import { Library } from "./data/library.js";
import { bookList } from "./data/data-books.js";

let CreatArticles = {
    data () {  
        return {  
            articleInner : []  
        }  
    },
    setup(){
        const newShelf = new Library();
        let articleInnerReturn = [];
        newShelf.load(bookList);
        for(let book of newShelf.shelf){
            
            articleInnerReturn.push(  
                {  
                    image : book.image,
                    titleH4 : book.title,
                    genreP : book.genre,
                    authorP : book.author
                }
            )
        }
    },
    template: `  
    <article>
        <button>DECOUVRIR LE LIVRES</button>
    </article>
    `
}

export { CreatArticles };